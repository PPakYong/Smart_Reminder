<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip" >
    
	<TextView
	    android:id="@+id/howName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:hint="Name"
	    android:textColor="#000000"
	    android:textSize="20dip" />
	<TextView
	    android:id="@+id/howDistance"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:hint="distance"
	    android:textSize="15dip"
	    android:textColor="#000000"
	    android:layout_toRightOf="@+id/howName" 
	    android:layout_alignBottom="@+id/howName"
	    android:layout_marginLeft="8dip"/>
	<TextView
	    android:id="@+id/howNote"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:hint="note"
	    android:textColor="#000000"
	    android:layout_below="@+id/howName"
	    android:layout_marginTop="3dip" />
	<TextView
	    android:id="@+id/howRadioBtn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignTop="@+id/howName"
	    android:layout_alignBottom="@+id/howNote"
	    android:textSize="30dip"
	    android:gravity="center"
	    android:text=">"
	    />
</RelativeLayout>