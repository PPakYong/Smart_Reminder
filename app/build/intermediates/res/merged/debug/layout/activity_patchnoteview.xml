<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/patchnote">
    <TextView
        android:id="@+id/app_inform_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="25dp"
        android:gravity="center" />
    <TextView
        android:id="@+id/app_inform_note"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/note"
        android:textColor="#000000"
        android:textSize="13dip" 
        android:gravity="center"
        android:padding="10dip"
        android:layout_below="@+id/app_inform_title"/>  
        
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/app_inform_note"
        android:layout_above="@+id/inform_exit"
        android:layout_marginBottom="10dip">        
	    <TextView 
	       android:id="@+id/app_inform"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text=""
	       android:textColor="#000000"
	       android:textSize="10dip"/>
    </ScrollView>
    <Button
        android:id="@+id/inform_exit"
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"  		
   		android:layout_alignParentBottom="true"
   		android:text="확인"
   		android:textStyle="bold" />
</RelativeLayout>